/*
Da damn bear-killer player style
*/

.player
    display: block
    position: absolute
    bottom: 0
    height: 49px
    left: 0
    right: 0

    background:#222
    color: white
    transition: background-color 0.5s

    padding: 5px

    &.dragover
        background:linear-gradient(#f00, #800)

    text-align: center

    .player-element
        display:inline
        margin:0 2%

    .volume
        display:inline-block
        vertical-align:middle
        width: 100px
        height:20px

        #volume-switch-button
            vertical-align:top
            display:inline-block
            text-align: left
            margin: auto 2px
            width: 20px
            cursor:pointer

        .slider
            width: 75%
            height: 100%
            display:inline-block
            cursor:pointer

            .slider-container
                width:100%
                height:50%
                //border:1px solid #222
                border-radius: 7px
                top:25%
                left: 0%
                position:relative
                background: linear-gradient(top, #111, #555)

                .slider-inner
                    height:100%
                    border-radius: 7px
                    top:0px
                    left:0px
                    position:absolute
                    background: linear-gradient(top, #eee, #444)

                    .slider-handle
                        width: 10px
                        height: 15px
                        border:1px solid #444
                        border-radius: 7px
                        top: -3px
                        right: -5px
                        position:absolute
                        background: linear-gradient(top left, #eee, #444)

                        &:active
                            background: linear-gradient(top left, #ccc, #999)

    .progress-info
        display:inline-block
        vertical-align: middle
        height: 100%
        width: 40%
        margin:0 10px
        .id3-info
            cursor: default
            height: 20px
            margin: 3px 0
            color: white
            display:block
            padding-right: 5px
            overflow: ellipsis
        .progress
            display:block
            width: 100%
            height:10px
            cursor:pointer
            background-color: white
            .inner
                height: 100%
                background: linear-gradient(left, #f00, #800)

    .progress-side
        display: inline-block
        vertical-align: middle
        height: 100%
        width: 45px
        .progress-side-control
            display:block
            margin: auto
            cursor:pointer

        .time
            cursor: default
            display:block
            overflow: clip