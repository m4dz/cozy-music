@media (max-width: 350px)
    #content
        #tracks-display
            table
                .artist,
                .album
                    width: 0%

@media (min-width: 350px)
    #content
        #tracks-display
            table
                .artist,
                .album
                    width: 20%
                .num,
                .plays
                    width: 30px

@media (max-width: 490px)
    #content
        #tracks-display
            table
                .num,
                .plays
                    width: 0%

@media (min-width: 490px)
    #content
        #tracks-display
            table
                .num
                    width: 35px
                .plays
                    width: 25px

@media (max-width: 771px)
    .top-nav-text
        display: none
    .top-nav-title
        max-width: 60px

@media (max-width: 465px)
    #content
        .player
            .progress-info
                display: none

@media (max-width: 680px)
    #content
        .player
            .progress-side
                display: none
    #off-screen-nav
        .off-screen-nav-content
            width: 12rem !important


@media (max-width: 480px)
    // Landscape phones and down; why not using "orientation: portrait" ?orientation: landscape

    body
        //padding 0 20px
        text-rendering optimizeSpeed

    .layout-container
        width auto

@media (max-width: 767px)
    // Landscape phone to portrait tablet

    body
        //padding 0 20px
        text-rendering optimizeSpeed

    .layout-container
        width auto

@media (min-width: 768px) and (max-width: 979px)
    // Portrait tablet to landscape and desktop

    .layout-container
        width 724px

@media (min-width: 1200px)
    // Large desktop

    .layout-container
        width 1170px
